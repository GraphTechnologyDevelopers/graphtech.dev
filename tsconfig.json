{
  "compilerOptions": {
    "rootDir": "src/js",
    "outDir": "dist/assets/js",
    "module": "esnext",
    "target": "es2022",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/js"],
  "exclude": ["dist", "node_modules"]
}
